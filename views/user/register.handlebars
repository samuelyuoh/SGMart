<link rel="stylesheet" href="/css/reglogin.css">


<section class="login_box_area section-margin">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
						<div class="hover">
							<h4>Already have an account?</h4>
							<a class="button button-account" href="/user/login">Login Now</a>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="login_form_inner register_form_inner">
						<h3>Create an account</h3>
						<form class="row login_form" method="post" action="" id="register_form" >
							<div class="col-md-12 form-group">
								<input type="text" class="form-control" id="name" name="name" placeholder="Name" value="{{name}}" required>
							</div>
							<div class="col-md-12 form-group">
								<input type="email" class="form-control" id="email" name="email" placeholder="Email Address" value="{{email}}" required>
							</div>
							<div class="col-md-12 form-group">
								<input type="password" class="form-control" id="password" name="password" placeholder="Password" value="" required>
							</div>
							<div class="col-md-12 form-group">
								<input type="password" class="form-control" id="confirmPassword" name="password2" placeholder="Confirm Password" value="" required>
							</div>
							<div class="col-md-12 form-group" style="padding-top: 20px;">
								<button type="submit" class="button button-register w-100">Register</button>
							</div>
						</form>
						<hr style="width: 90%; margin: 0 auto 0.5rem auto;">
                        <div class="jumbotron text-center text-primary">
                            {{!-- <h1><span class="fa fa-lock"></span> Social Authentication</h1> --}}
                            <p>Login or Register with:</p>
                            <a href="/user/login/google" class="btn btn-light" style="border-color: black;"><i class="fab fa-google"></i> Sign In with Google</a>
                        </div>
					</div>
				</div>
			</div>
		</div>
	</section>
